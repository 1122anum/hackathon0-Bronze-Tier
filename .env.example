# Environment Configuration Template - Silver Tier
# ================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# CORE CONFIGURATION
# ============================================

# Vault Configuration
VAULT_PATH=./vault

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# ============================================
# BRONZE TIER - FILE WATCHER
# ============================================

# Watcher Configuration
WATCH_INTERVAL=5  # seconds between checks (if using polling fallback)

# Performance Settings
MAX_FILE_SIZE_MB=10  # Maximum file size to process
MAX_ITERATIONS=10    # Maximum reasoning loop iterations
PROCESSING_TIMEOUT=300  # seconds

# Safety Settings
ENABLE_AUTO_DELETE=false  # Never auto-delete files
REQUIRE_CONFIRMATION=false  # For destructive operations

# Dashboard Update Frequency
DASHBOARD_UPDATE_INTERVAL=60  # seconds

# Archive Settings
ARCHIVE_AFTER_DAYS=30  # Move completed tasks to archive after X days

# ============================================
# SILVER TIER - GMAIL WATCHER
# ============================================

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=credentials.json  # OAuth2 credentials from Google Cloud
GMAIL_TOKEN_PATH=token.json              # Auto-generated after first auth
GMAIL_CHECK_INTERVAL=60                  # seconds between Gmail checks
GMAIL_MAX_RESULTS=10                     # Max emails to fetch per check
GMAIL_MARK_AS_READ=false                 # Mark processed emails as read

# ============================================
# SILVER TIER - MCP EMAIL SERVER
# ============================================

# MCP Server Configuration
MCP_PORT=3000
MCP_HOST=localhost
MCP_ENABLED=true

# SMTP Configuration (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password  # Use App Password, not regular password

# Email Settings
EMAIL_FROM_NAME=AI Employee
EMAIL_TIMEOUT=10000  # milliseconds

# ============================================
# SILVER TIER - LINKEDIN WATCHER
# ============================================

# LinkedIn Configuration
LINKEDIN_ENABLED=true
LINKEDIN_POST_TIME=09:00  # Time to post (24-hour format)
LINKEDIN_POST_DAYS=Monday,Tuesday,Wednesday,Thursday,Friday  # Days to post
LINKEDIN_CHECK_INTERVAL=300  # seconds (5 minutes)

# LinkedIn Content Settings
LINKEDIN_POST_LENGTH=medium  # short, medium, long
LINKEDIN_POST_TONE=professional  # professional, inspirational, educational
LINKEDIN_AUTO_POST=false  # If true, posts without approval (NOT RECOMMENDED)

# ============================================
# SILVER TIER - APPROVAL ENGINE
# ============================================

# Approval Engine Configuration
APPROVAL_CHECK_INTERVAL=30  # seconds between checks
APPROVAL_TIMEOUT=86400  # seconds (24 hours) before approval expires
APPROVAL_NOTIFICATIONS=true  # Enable approval notifications

# Risk Assessment Thresholds
RISK_HIGH_THRESHOLD=3  # Score >= 3 is high risk
RISK_MEDIUM_THRESHOLD=1  # Score >= 1 is medium risk

# ============================================
# SILVER TIER - PLANNING SYSTEM
# ============================================

# Planning Configuration
PLANNING_ENABLED=true
PLAN_AUTO_APPROVE_LOW_RISK=false  # Auto-approve low-risk plans
PLAN_MAX_STEPS=20  # Maximum execution steps in a plan

# ============================================
# FUTURE - GOLD TIER (Placeholder)
# ============================================

# Claude API Configuration (when integrating API)
# ANTHROPIC_API_KEY=your_api_key_here
# CLAUDE_MODEL=claude-3-5-sonnet-20241022
# CLAUDE_MAX_TOKENS=4096

# Advanced Features
# MULTI_AGENT_ENABLED=false
# VOICE_COMMANDS_ENABLED=false
# MOBILE_APP_ENABLED=false

# ============================================
# DEVELOPMENT / DEBUG
# ============================================

# Development Mode
DEV_MODE=false
DEBUG_VERBOSE=false

# Testing
TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# ============================================
# NOTES
# ============================================

# Gmail Setup:
# 1. Create Google Cloud project
# 2. Enable Gmail API
# 3. Create OAuth2 credentials
# 4. Download credentials.json
# 5. Run: python setup_gmail.py
# 6. Complete OAuth flow in browser
# 7. token.json will be created automatically

# SMTP App Password:
# 1. Go to Google Account settings
# 2. Security > 2-Step Verification
# 3. App passwords
# 4. Generate new app password
# 5. Use that password in SMTP_PASS

# MCP Server:
# 1. cd mcp_server
# 2. npm install
# 3. npm start
# Server will run on http://localhost:3000
