# Environment Configuration Template
# ==================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Vault Configuration
VAULT_PATH=./vault

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# Watcher Configuration
WATCH_INTERVAL=5  # seconds between checks (if using polling fallback)

# Gmail Watcher Configuration
GMAIL_CREDENTIALS_FILE=credentials.json  # OAuth2 credentials from Google Cloud
GMAIL_TOKEN_FILE=token.json              # Auto-generated after first auth
POLL_INTERVAL=60                         # seconds between Gmail checks

# Future: Claude API Configuration (when integrating API)
# ANTHROPIC_API_KEY=your_api_key_here
# CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Future: MCP Server Configuration
# MCP_SERVER_PORT=3000
# MCP_ENABLED=false

# Performance Settings
MAX_FILE_SIZE_MB=10  # Maximum file size to process
MAX_ITERATIONS=10    # Maximum reasoning loop iterations
PROCESSING_TIMEOUT=300  # seconds

# Safety Settings
ENABLE_AUTO_DELETE=false  # Never auto-delete files
REQUIRE_CONFIRMATION=false  # For destructive operations

# Dashboard Update Frequency
DASHBOARD_UPDATE_INTERVAL=60  # seconds

# Archive Settings
ARCHIVE_AFTER_DAYS=30  # Move completed tasks to archive after X days
